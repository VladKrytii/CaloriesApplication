<UserControl x:Class="CaloriesApplication.Pages.View.UserControls.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaloriesApplication.Pages.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <TextBox x:Name="txtInput" VerticalAlignment="Center" FontSize="20" FontWeight="Light" 
                 Background="Transparent" TextChanged="txtInput_TextChanged"/>
        <TextBlock x:Name="tbPlaceholder" Text="{Binding Placeholder}" VerticalAlignment="Center" 
                   FontSize="16" FontWeight="Light" Foreground="DarkCyan" Margin = "5,0,0,0"/>
        <Button x:Name="btnClear" Width="30" HorizontalAlignment="Right" Content="X" 
                Background="Transparent" Foreground="LightCoral" BorderThickness="0" Click="btnClear_Click"/>
    </Grid>
</UserControl>

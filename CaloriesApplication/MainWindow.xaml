<Window x:Class="CaloriesApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calories Application" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Content="Add Dish" Click="AddDish_Click" Margin="5"/>
                <Button Content="Add Product" Click="AddProduct_Click" Margin="5"/>
                <Button Content="Search Product" Click="SearchProduct_Click" Margin="5"/>
                <Button Content="Search Dish" Click="SearchDish_Click" Margin="5"/>
                <Button Content="Needed Calories" Click="NeededCalories_Click" Margin="5"/>
            </StackPanel>
            <Frame Name="masterFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
